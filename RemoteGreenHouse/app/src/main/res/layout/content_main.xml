<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="project.group.remotegreenhouse.MainActivity"
    tools:showIn="@layout/activity_main">

    <Switch
        android:id="@+id/sw_BluetoothONOFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_bluetooth"
        android:theme="@style/SCBSwitch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_connect"/>

    <SeekBar
        android:id="@+id/sb_LEDState"
        android:layout_width="match_parent"
        android:layout_height="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tw_LEDState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/sb_LEDState"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <!--

    New ListView to display green house values


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>-->


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        app:layout_constraintTop_toBottomOf="@+id/sb_LEDState">

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="@string/label_temperature" />

            <TextView
                android:id="@+id/val_temperature"
                android:gravity="end"
                android:padding="3dip"
                android:text="@string/dim_temperature" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="@string/label_pressure" />

            <TextView
                android:id="@+id/val_pressure"
                android:gravity="end"
                android:padding="3dip"
                android:text="@string/dim_pressure" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="@string/label_brightness" />

            <TextView
                android:id="@+id/val_brightness"
                android:gravity="end"
                android:padding="3dip"
                android:text="@string/dim_brightness" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="@string/label_airHumidity" />

            <TextView
                android:id="@+id/val_airHumidity"
                android:gravity="end"
                android:padding="3dip"
                android:text="@string/dim_humidity" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>

            <TextView
                android:layout_height="41dp"
                android:layout_column="1"
                android:padding="3dip"
                android:text="@string/label_terraHumidity" />

            <TextView
                android:id="@+id/val_terraHumidity"
                android:gravity="end"
                android:padding="3dip"
                android:text="@string/dim_humidity" />
        </TableRow>
    </TableLayout>




</android.support.constraint.ConstraintLayout>
