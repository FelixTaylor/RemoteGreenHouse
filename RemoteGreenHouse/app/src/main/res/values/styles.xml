<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_secondary</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <!-- The base container can be used for
    the parent element of an activity -->

    <style name="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Each section in an activity is
    divided by one of these sub containers -->

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@color/colorTableLight</item>
        <item name="colorControlNormal">@color/colorTableLight</item>
        <item name="colorControlActivated">@color/colorTableLight</item>
        <item name="colorControlHighlight">@color/colorTableLight</item>
    </style>
    <style name="Container.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/default_activity_padding</item>
        <item name="android:paddingEnd">@dimen/default_activity_padding</item>
        <item name="android:layout_marginBottom">@dimen/default_activity_padding</item>
    </style>
    <style name="Container.Vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">@dimen/default_activity_padding</item>
        <item name="android:paddingEnd">@dimen/default_activity_padding</item>
        <item name="android:layout_marginBottom">@dimen/default_activity_padding</item>
    </style>

    <style name="Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_font_size</item>
        <item name="android:textColor">@color/colorText</item>
    </style>
    <style name="Label.Title">
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <!-- Buttons -->
    <style name="DefaultButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/default_font_size</item>
        <item name="android:paddingEnd">@dimen/default_font_size</item>
    </style>

    <!-- Switch -->
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorControlActivated">@color/sw_foreground</item>
        <item name="colorSwitchThumbNormal">@color/sw_Enable</item>
        <item name="android:colorForeground">@color/sw_Disable</item>
    </style>

</resources>
